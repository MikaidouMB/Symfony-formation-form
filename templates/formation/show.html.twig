{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>Formation</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ formation.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ formation.name }}</td>
                </tr>
                <tr>
                    <th>Créée le</th>
                    <td>{{ formation.createdAt ? formation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Mise à jour le</th>
                    <td>{{ formation.updatedAt ? formation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="btn btn-primary btn-md mb-3">éditer</a>

        {{ include('partials/_delete_form.html.twig') }}

        <div class="text-center">
            <a href="{{ path('app_formation_index') }}" class="btn btn-warning btn-md">retour à la liste</a>
        </div>
</div>

{% endblock %}
